pipeline {
    environment {
        GitBranch="main"
        GitHubCredentialsId="CI-pipeline"
        GitUrl="https://github.com/AnitaPK/taskManager.git"
        
    }
    agent any
    stages {
        stage('Clone Application Repository') {
            steps {
                git branch: GitBranch, credentialsId: GitHubCredentialsId, url: GitUrl
                sh 'ls -lrt'
            }
        }
    }
    
}